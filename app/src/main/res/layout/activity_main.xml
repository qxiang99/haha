<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <com.bintutu.shop.ui.view.RecyclerCoverFlow
        android:id="@+id/mian_coverflow"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_278"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/main_lin_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_9"
            android:layout_marginBottom="@dimen/dp_9"
            android:background="@mipmap/wifi_icon"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_lin_poweroff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_9"
            android:layout_marginBottom="@dimen/dp_9"
            android:background="@mipmap/power_off"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:background="@drawable/main_lin_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/main_lin_command"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_7"
                android:background="@mipmap/login_logo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginBottom="@dimen/dp_4"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_names"
                    android:textColor="@color/bg_color"
                    android:textSize="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/main_text_authorization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="授权门店"
                    android:textColor="@color/bg_color"
                    android:textSize="@dimen/dp_7"/>
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/main_but_fitting"
            android:layout_width="@dimen/dp_88"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_55"
            android:layout_marginBottom="@dimen/dp_3"
            android:visibility="gone"
            android:background="@mipmap/fitting_button"/>

        <Button
            android:id="@+id/main_but_scan"
            android:layout_width="@dimen/dp_88"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_3"
            android:background="@mipmap/home_but_scan"/>


        <Button
            android:id="@+id/main_but_hibitionroom"
            android:layout_width="@dimen/dp_88"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_45"
            android:background="@mipmap/home_but_hibitionroom"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>