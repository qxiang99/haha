<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black50">

    <Button
        android:id="@+id/login_close"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_9"
        android:layout_marginTop="@dimen/dp_9"
        android:background="@mipmap/close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/login_image1"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@mipmap/scan_cod"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_edit_number"
        android:layout_width="@dimen/dp_241"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_36"
        android:background="@null"
        android:hint="请输入编号"
        android:maxLines="1"
        android:textColor="@color/text_color_bf"
        android:textColorHint="@color/text_color_bf"
        android:textSize="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="@+id/login_image1"
        app:layout_constraintLeft_toRightOf="@+id/login_image1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_image1" />

    <View
        android:layout_width="@dimen/dp_241"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@color/text_color_bf"
        app:layout_constraintLeft_toRightOf="@+id/login_image1"
        app:layout_constraintTop_toBottomOf="@+id/login_edit_number" />

    <ImageView
        android:id="@+id/login_image2"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@mipmap/phone_bg"
        app:layout_constraintLeft_toLeftOf="@+id/login_image1"
        app:layout_constraintTop_toBottomOf="@+id/login_image1" />

    <EditText
        android:id="@+id/login_edit_phone"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_11"
        android:background="@null"
        android:inputType="number"
        android:hint="请输入上传手机号"
        android:maxLines="1"
        android:textColor="@color/text_color_bf"
        android:textColorHint="@color/text_color_bf"
        android:textSize="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="@+id/login_image2"
        app:layout_constraintLeft_toRightOf="@+id/login_image2"
        app:layout_constraintTop_toTopOf="@+id/login_image2" />


    <View
        android:id="@+id/login_view"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@color/text_color_bf"
        app:layout_constraintLeft_toRightOf="@+id/login_image2"
        app:layout_constraintTop_toBottomOf="@+id/login_edit_phone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/login_edit_phone"
        app:layout_constraintTop_toTopOf="@+id/login_edit_phone">

        <TextView
            android:id="@+id/login_text_code"
            android:layout_width="@dimen/dp_82"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_9"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/bg_color" />

        <View
            android:id="@+id/login_view3"
            android:layout_width="@dimen/dp_82"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@color/bg_color" />
    </LinearLayout>


    <ImageView
        android:id="@+id/login_image3"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@mipmap/verification_code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/login_image2"
        app:layout_constraintTop_toBottomOf="@+id/login_image2" />


    <EditText
        android:id="@+id/login_edit_code"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_11"
        android:background="@null"
        android:inputType="number"
        android:hint="请输入验证码"
        android:maxLines="1"
        android:textColor="@color/text_color_bf"
        android:textColorHint="@color/text_color_bf"
        android:textSize="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="@+id/login_image3"
        app:layout_constraintLeft_toRightOf="@+id/login_image3"
        app:layout_constraintTop_toTopOf="@+id/login_image3" />

    <View
        android:id="@+id/login_view2"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@color/text_color_bf"
        app:layout_constraintLeft_toRightOf="@+id/login_image3"
        app:layout_constraintTop_toBottomOf="@+id/login_edit_code" />

    <Button
        android:id="@+id/login_but_submit"
        android:layout_width="@dimen/dp_82"
        android:layout_height="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_9"
        android:background="@drawable/login_but_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/bg_color"
        app:layout_constraintLeft_toRightOf="@+id/login_edit_code"
        app:layout_constraintTop_toTopOf="@+id/login_edit_code" />


</android.support.constraint.ConstraintLayout>